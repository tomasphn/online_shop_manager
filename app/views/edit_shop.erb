<form action="/shops/<%= @shop[:id] %>/edit" method="post">
  <dl>
    <dt>
      <label for="shop_name">Enter the new name for your shop (35 character max):</label>
    </dt>
    <dd>
      <input name="shop_name" placeholder="<%= @shop[:name] %>" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/shops/<%= @shop[:id] %>">Cancel</a>
  </fieldset>
</form>